<header class="main-header">

    <div class="container">
        <nav class="navbar" id="myTopnav">
            <div class="icon-bar" onclick="Show()">
                <i></i>
                <i></i>
                <i></i>
            </div>
            <ul id="nav-lists">
                <li class="close"><span onclick="Hide()">Ã—</span></li>
                <li><a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a></li>


                <li><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Books</a></li>


                <!-- only display this information if user is logged in -->
                <% if (isAuthenticated) { %>

                    <li><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a></li>


                    <li><a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a></li>


                    <li><a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add
